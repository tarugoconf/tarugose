{% import "components.njk" as comp %}

<div class="ly-section contact-wrapper">
    <section class="contact" id="{{ contact.id }}">
        <header class="contact-header">
            <h2>{{ contact.title }}</h2>
        </header>

        <div>
            <strong>{{ contact.manager.name }}</strong>
            <em>{{ contact.manager.position }}</em>

            <address>
                {{ comp.link(contact.manager.email) }}
                {{ comp.link(contact.manager.twitter) }}
            </address>
        </div>

        <div>
            {{ contact.address | md | type | safe }}

            <address>
                {{ comp.link(contact.map) }}
                {{ comp.link(contact.slack) }}
                {{ comp.link(contact.twitter) }}
            </address>
        </div>
    </section>
</div>
