{% macro link(data) %}
    <a href="{{ data.url | url }}" {{ data | attr('class', 'rel') | safe }}>
        {% if data.icon %}
            <span class="icon">
                {% include "assets/" + data.icon + ".svg" %}
            </span>
        {% endif %}

        {{ data.text }}
    </a>
{% endmacro %}

{% macro img(data, extra) %}
    {% if data.url %}
        <a href="{{ data.url }}" target="_blank" rel="noopener">
            <img src="{{ data.src | url }}" {{ [data, extra] | attr('alt', 'class', 'title') | safe }}>
        </a>
    {% else %}
        <img src="{{ data.src | url }}" {{ [data, extra] | attr('alt', 'class', 'title') | safe }}>
    {% endif %}
{% endmacro %}

{% macro icon(type, data, class) %}
    {% if data.url %}
    <a href="{{ data.url }}" class="{{ ['icon', class, data.class] | class }}" title="{{ data.title }}" rel="noopener">
        {% include "assets/" + type + ".svg" %}
    </a>
    {% else %}
        {% include "assets/" + type + ".svg" %}
    {% endif %}
{% endmacro %}